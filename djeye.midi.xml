<?xml version='1.0' encoding='utf-8'?>
<MixxxControllerPreset mixxxVersion="" schemaVersion="1">
    <info>
        <name>djeye</name>
    </info>
    <controller id="">
        <scriptfiles>
            <file filename="djeye-scripts.js" functionprefix="djeye"/>
        </scriptfiles>
        <controls>
            <control>
                <group>[Channel1]</group>
                <key>LoadSelectedTrack</key>
                <description>Load selected track in deck 2.</description>
                <status>0x92</status>
                <midino>0x00</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>play</key>
                <description>Play channel 1</description>
                <status>0x90</status>
                <midino>0x01</midino>
                <options>
                    <switch/>
                </options>
            </control>
            <control>
                <group>[Library]</group>
                <key>MoveUp</key>
                <description>Move library selection up</description>
                <status>0x92</status>
                <midino>0x01</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Library]</group>
                <key>MoveDown</key>
                <description>Move library selection down</description>
                <status>0x92</status>
                <midino>0x02</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel2]</group>
                <key>LoadSelectedTrack</key>
                <description>Load selected track in deck 2.</description>
                <status>0x92</status>
                <midino>0x03</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>djeye.activateSelectedLoopSize</key>
                <description>Loop toggle</description>
                <status>0x90</status>
                <midino>0x06</midino>
                <options>                    
                  <Script-Binding/>
                </options>
            </control>          
            <control>
                <group>[Channel1]</group>
                <key>djeye.selectLoopSize</key>
                <description>Loop size selection</description>
                <status>0xB0</status>
                <midino>0x18</midino>
                <options>                    
                  <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>playposition</key>
                <description>Seek track</description>
                <status>0xB0</status>
                <midino>0x14</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>djeye.activateSelectedHotCue</key>
                <description>Activates current HotCue</description> <!--see  updateSelectedhotcue-->
                <status>0x90</status>
                <midino>0x03</midino>
                <options>
                  <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>djeye.selectHotcue</key>
                <description>Sets current hotcue</description>
                <status>0xB0</status>
                <midino>0x15</midino>
                <options>
                  <Script-Binding/>
                </options>
            </control>
            <control>
                <group>[QuickEffectRack1_[Channel1]]</group>
                <key>super1</key>
                <description>HPLP control</description>
                <status>0xB0</status>
                <midino>0x16</midino>
                <options>
                    <normal/>
                </options>
            </control>
            <control>
                <group>[Channel1]</group>
                <key>volume</key>
                <description>Volume control</description>
                <status>0xB0</status>
                <midino>0x17</midino>
                <options>
                    <normal/>
                </options>
            </control>
        </controls>
        <outputs/>
    </controller>
</MixxxControllerPreset>
